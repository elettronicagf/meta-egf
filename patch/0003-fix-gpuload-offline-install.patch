Subject: [PATCH] fix gpuload offline install

---
 imx/meta-bsp/recipes-core/initscripts/initscripts_%.bbappend | 3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/imx/meta-bsp/recipes-core/initscripts/initscripts_%.bbappend b/imx/meta-bsp/recipes-core/initscripts/initscripts_%.bbappend
index c0fd0d3..f46392d 100644
--- a/imx/meta-bsp/recipes-core/initscripts/initscripts_%.bbappend
+++ b/imx/meta-bsp/recipes-core/initscripts/initscripts_%.bbappend
@@ -12,11 +12,12 @@ do_install_append_mx6 () {
     install -d ${D}/lib/systemd/system
     install -m 0755 ${WORKDIR}/gpuload ${D}/usr/bin
     install -m 0755 ${WORKDIR}/gpuload.service ${D}/lib/systemd/system
+    install -d ${D}/etc/systemd/system/multi-user.target.wants
 }
 
 pkg_postinst_${PN}_append_mx6 () {
     #!/bin/sh
-    ln -s /lib/systemd/system/gpuload.service /etc/systemd/system/multi-user.target.wants/
+    ln -s /lib/systemd/system/gpuload.service $D/etc/systemd/system/multi-user.target.wants/
 }
 
 FILES_${PN}_append_mx6 = " /lib/systemd/system/gpuload.service /usr/bin/gpuload"
